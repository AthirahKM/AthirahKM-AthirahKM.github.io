
@{
    ViewBag.Title = "Variant";
}

<div ng-init="pageId = 1;"></div>
<div class="container" ng-controller="TestController" ng-init="getVariants()">
    <div class="page-header">
        <div class="form-row mb-2">
            <h1 id="titlehead" class="page-title">
                Variant
            </h1>
        </div>
        <br />
    </div>
    <div class="page">
        <div class="page-wrapper">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <form ng-submit="getVariantsByCountries(countryvariant)">
                                <div class="mt-3 mb-3">
                                    <div class="row">
                                        <div class="card-title">
                                            @*<h3>Variant</h3>*@
                                        </div>
                                        <div class="card-options">
                                            <div class="col-sm-10">
                                                <select class="form-control"
                                                        ng-model="countryvariant"
                                                        ng-options="v as v for v in variants">
                                                    <option value=''>Choose Country</option>
                                                </select>
                                            </div>
                                            <div class="col-sm-1">
                                                <button class="btn btn-primary" type="submit">SEARCH</button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-body">
                            <div class="">
                                <div class="table-responsive">
                                    <table datatable="ng" class="table card-table table-striped table-bordered table-vcenter text-nowrap">
                                        <thead>
                                            <tr>
                                                <th class="w-1">#</th>
                                                <th>Variant Name</th>
                                                <th>Number of New Cases</th>
                                                <th>Variant Percentage</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="item in countryVariantsList">
                                                <td>
                                                    <span class="text-muted">{{$index + 1}}</span>
                                                </td>
                                                <td>{{item.variant}}</td>
                                                <td>{{item.newCases}}</td>
                                                <td>{{item.percentVariant}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



